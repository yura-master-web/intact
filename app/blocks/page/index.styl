html,
body
	font-weight $font-weight-base
	base-font()
	touch-action manipulation

.container
	wrapper()
	+media-breakpoint-up('sm')
		max-width 520px
		// max-width 570px
	+media-breakpoint-up('md')
		max-width 720px
		// max-width 750px
	+media-breakpoint-up('lg')
		max-width 960px
		// max-width 990px
	+media-breakpoint-up('xl')
		max-width 1170px
		// max-width 1170px

.row
	row-flex()

img
	max-width 100%
	height auto

.upcs
	text-transform uppercase

.lwcs
	text-transform lowercase

.tdn
	text-decoration none

.bdrs
	border-radius 4px

.fwb
	font-weight bold
.fsi
	font-style italic

.pos-rel
	position relative

// .btn-primary
.btn-hover
	position relative
	display flex
	width 359px
	height 56px
	font-weight bold
	color colors('white')
	justify-content center
	align-items center
	&:after
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		content ''
		background-color #fff
		border-radius 4px
		opacity 0
		transition opacity $t-time
	&:hover:after
		opacity .15
	&_main
		width 300px

