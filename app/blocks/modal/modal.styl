.remodal-wrapper
	overflow-y scroll
	.remodal
		pointer-events none

.remodal
	margin-bottom 0
	.container
		// padding-y(20px)
		display flex
		width 100%
		align-items center

.modal-form
	padding 64px 20px 0
	display flex
	flex-direction column
	width 100%
	height 100%
	max-height 640px
	pointer-events all
	background-image url(../images/modal-bg.png)
	background-repeat no-repeat
	background-size cover
	&__title
		margin-bottom 20px
		font-size px2rem(50px)
		line-height px2rem(70px)
	&__sub-title
		font-size px2rem(24px)
		line-height px2rem(40px)

	&__bg
		background-image url(../images/smartphone.png)
		background-repeat no-repeat
		background-position center 40px
		flex 1 1 500px

.btn-close
	position absolute
	top 27px
	right 28px
	width 26px
	height 26px
	cursor pointer
	transform rotate(-45deg) scale(1)
	transition transform $t-time linear
	&:hover
		transform rotate(-45deg) scale(1.2)
	&:before
	&:after
		position absolute
		content ''
		background-color colors('white')
	&:before
		top 0
		left 50%
		bottom 0
		transform translateX(-50%)
		width 2px
	&:after
		top 50%
		right 0
		left 0
		height 2px
		transform translateY(-50%)
