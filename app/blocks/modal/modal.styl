.remodal-wrapper
	padding 10px 0
	overflow-y scroll
	+media-breakpoint-up('lg')
		padding-top 10px
		padding-bottom 0
	.remodal
		pointer-events none

.remodal
	margin-bottom 0
	+media-breakpoint-down('sm')
		padding-top 20px
		padding-bottom 20px
	+media-breakpoint-down('xs')
		padding 10px 0
	.container
		&_modal
			display flex
			width 100%
			align-items center

.container
	&&_modal
		+media-breakpoint-down('xs')
			max-width 400px


.modal-form
	padding 64px 20px 0
	display flex
	flex-direction column
	width 100%
	height 100%
	max-height 640px
	pointer-events all
	background-image url(../images/modal-bg.png)
	background-repeat no-repeat
	background-size cover

	+media-breakpoint-down('sm')
		padding 50px 20px 0
		max-height 540px
	+media-breakpoint-down('xs')
		max-height 500px
		align-items center

	&__fail
		display none
		& ^[0]__title
			color colors('error')

	&__title
		margin-bottom 50px
		font-size px2rem(50px)
		line-height px2rem(70px)
		+media-breakpoint-down('sm')
			margin-bottom 40px
			font-size px2rem(28px)
			line-height px2rem(38px)
		+media-breakpoint-down('xs')
			margin-bottom 60px
			font-size px2rem(24px)
			line-height px2rem(30px)
	&__sub-title
		position absolute
		right 0
		left 0
		margin-top -34px
		font-size px2rem(24px)
		line-height px2rem(40px)
		+media-breakpoint-down('sm')
			margin-top -24px
			padding 0 20px
			font-size px2rem(20px)
			line-height px2rem(26px)
		+media-breakpoint-down('xs')
			margin-top -36px
			font-size px2rem(18px)
			line-height px2rem(24px)

	&__bg
		background-image url(../images/smartphone.png)
		background-repeat no-repeat
		background-position center 40px
		flex 1 1 500px
		+media-breakpoint-down('xs')
			width 100%
			max-width 90%
			background-size cover

.btn-close
	position absolute
	width 26px
	height 26px
	cursor pointer
	transform rotate(-45deg) scale(1)
	transition transform $t-time linear
	&_good
		top 27px
		right 28px
		+media-breakpoint-down('xs')
			top 20px
			right 20px
	&_modal-form
		top 28px
		right 42px
		+media-breakpoint-down('xs')
			top 18px
			right 33px
	&_modal-privacy-policy
		top 40px
		right 40px
		+media-breakpoint-down('md')
			top 30px
			right 30px
		+media-breakpoint-down('sm')
			top 20px
			right 20px
	&:hover
		transform rotate(-45deg) scale(1.2)
	&:before
	&:after
		position absolute
		content ''
		background-color colors('white')
		~/_modal-privacy-policy&
			background-color colors('text')
	&:before
		top 0
		left 50%
		bottom 0
		transform translateX(-50%)
		width 2px
	&:after
		top 50%
		right 0
		left 0
		height 2px
		transform translateY(-50%)
