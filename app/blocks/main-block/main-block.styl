.main-block
	display flex
	flex-direction column
	min-height 100vh

.top-line
	padding 30px 0 23px
	display grid
	border-bottom 2px solid rgba(colors('white'), 10%)
	grid-template-columns 1fr minmax(1px, 1158px) 1fr
	&__logo
		margin-right 98px
		justify-self end
	&__phone
		margin-left 35px
		align-self center
		&:hover
			color colors('form')


.spreader
	display flex
	min-height 95px
	flex 1 1 auto

.container
	&_header
		margin-top auto
		margin-bottom auto
		width 100%

.header-content
	col()
	size-xl(6)

	&__main-title
		margin-bottom 46px
		font-size $font-size-h1
		font-weight bold
		line-height px2rem(90px)
	&__desc
		margin-bottom 70px
		padding-right 90px
		font-size px2rem(16px)
		line-height px2rem(36px)
	&__button
		margin-bottom 36px

.header-img
	position relative
	col()
	size-xl(6)

.main-block-arrow
	position absolute
	bottom 52px
	cursor pointer
	transition stroke $t-time
	svgSize(17px 58px)
	fill none
	stroke colors('white')
	stroke-miterlimit 10
	stroke-width 2px
	&:hover
		stroke colors('form')
