.main-block-arrow
	position absolute
	bottom 52px
	cursor pointer
	transition stroke $t-time
	animation move-arrow 1.5s 0ms infinite normal linear
	svgSize(17px 58px)
	fill none
	stroke colors('white')
	stroke-miterlimit 10
	stroke-width 2px
	&:hover
		stroke colors('form')
	+media-breakpoint-down('sm')
		display none

@keyframes move-arrow
	50%
		bottom 40px
	100%
		bottom 52px
